<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/lyFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/image_small"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_really_large"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_small" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgFriendAvatar"
                android:layout_width="@dimen/image_more_small"
                android:layout_height="@dimen/image_more_small"
                android:src="@drawable/default_profile"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:background="@color/black"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_normal">
                    <ImageView
                        android:id="@+id/img_friend"
                        android:layout_width="@dimen/image_extra_large"
                        android:layout_height="@dimen/image_extra_large"/>
                    <TextView
                        android:id="@+id/txtFriendMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_normal" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txtFriendCreated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:textColor="@color/text_normal"
                    android:textSize="@dimen/textsize_extra_small" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyMy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="right"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/image_large"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/green"
                android:orientation="vertical"
                android:padding="@dimen/margin_normal">
                <ImageView
                    android:id="@+id/img_my"
                    android:layout_width="@dimen/image_extra_large"
                    android:layout_height="@dimen/image_extra_large"/>
                <TextView
                    android:id="@+id/txtMyMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_normal" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtMyCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_large"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/textsize_extra_small" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imgMyAvatar"
            android:layout_width="@dimen/image_more_small"
            android:layout_height="@dimen/image_more_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:src="@drawable/default_profile" />
    </LinearLayout>
</LinearLayout>