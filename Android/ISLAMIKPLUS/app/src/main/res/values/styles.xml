<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light" />
    <style name="AppTheme" parent="AppBaseTheme" />
    <style name="NoTitleTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="TransparentTheme" parent="NoTitleTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="ThemeFullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="normalButton">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textColor">@drawable/btn_text_selector</item>
        <item name="android:background">@drawable/bg_rectangle_blue</item>
        <item name="android:padding">@dimen/margin_very_small</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="normalEdit">
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textColorHint">@color/text_light</item>
        <item name="android:padding">@dimen/image_very_small</item>
    </style>
    <style name="normalText">
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textColorHint">@color/text_light</item>
        <item name="android:padding">@dimen/image_very_small</item>
    </style>
    <style name="spinnerItemStyle" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem" />
    <!-- Slide Menu -->
    <attr name="slideMenuStyle" format="reference" />

    <declare-styleable name="SlideMenu_Layout">
        <attr name="layout_role" format="enum">
            <enum name="content" value="0" />
            <enum name="primaryMenu" value="1" />
            <enum name="secondaryMenu" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="SlideMenu">
        <attr name="primaryShadowWidth" format="dimension" />
        <attr name="secondaryShadowWidth" format="dimension" />
        <attr name="primaryShadowDrawable" format="reference" />
        <attr name="secondaryShadowDrawable" format="reference" />
        <attr name="edgeSlide" format="boolean" />
        <attr name="edgeSlideWidth" format="dimension" />
        <attr name="slideDirection" format="flags">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
        <attr name="interpolator" format="reference" />
    </declare-styleable>

</resources>